        <Image Height="390" Width="66" Source="images/pipeBottom.png" Tag="obs3" Canvas.Top="349.484" Canvas.Left="530.598"/>
        <Image Height="390" Width="66" Source="images/pipeTop.png" Tag="obs3" Canvas.Left="530.598" Canvas.Top="-150.309"/>

        <Image Name="flappyBird" Height="36" Width="50" Source="images/flappyBird.png" Stretch="Fill" Canvas.Left="45.66" Canvas.Top="203.691" />

        <Label Name="txtScore" FontSize="22" FontWeight="ExtraBold" Content="Счет: 0" />

    </Canvas>
</Window>
